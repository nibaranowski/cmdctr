{
  "name": "cmdctr",
  "version": "0.1.0",
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:fast": "jest --maxWorkers=1 --coverage=false",
    "test:superfast": "jest --maxWorkers=1 --coverage=false --testPathPattern='(Button|Modal|KanbanBoard)' --verbose=false",
    "test:components": "jest --testPathPattern=components --maxWorkers=1",
    "test:lib": "jest --testPathPattern=lib --maxWorkers=1",
    "test:pages": "jest --testPathPattern=pages --maxWorkers=1",
    "test:coverage": "jest --coverage",
    "test:coverage:dev": "jest --coverage --coverageDirectory=coverage-dev",
    "test:coverage:staging": "jest --coverage --coverageDirectory=coverage-staging",
    "test:coverage:prod": "jest --coverage --coverageDirectory=coverage",
    "test:coverage:all": "npm run test:coverage:dev && npm run test:coverage:staging && npm run test:coverage:prod && node scripts/test-dashboard.js",
    "test:unit": "jest --testPathPattern='__tests__/(components|lib|models|pages)/.*\\.test\\.(ts|tsx)$'",
    "test:integration": "jest --testPathPattern='__tests__/integration/'",
    "test:e2e": "jest --testPathPattern='__tests__/e2e/'",
    "test:api": "jest --testPathPattern='__tests__/api/'",
    "test:models": "jest --testPathPattern='__tests__/models/'",
    "test:scaffold": "node scripts/test-scaffolder.js",
    "test:scaffold:watch": "node scripts/test-scaffolder.js --run-tests",
    "test:enforce": "npm run test:coverage:dev && node scripts/coverage-enforcer.js",
    "test:watch": "jest --watch --maxWorkers=1",
    "test:watch:fast": "jest --watch --maxWorkers=1 --coverage=false",
    "verify:promotion": "node scripts/verify-promotion.js",
    "check:coverage": "node scripts/check-coverage.js",
    "promote": "node scripts/ci-automation.js",
    "promote:staging": "cross-env GITHUB_REF_NAME=main node scripts/ci-automation.js",
    "promote:prod": "cross-env GITHUB_REF_NAME=staging node scripts/ci-automation.js",
    "deploy": "node scripts/deploy.js",
    "deploy:quick": "node scripts/deploy-quick.js",
    "prepare": "husky install",
    "auto-heal": "node scripts/auto-heal.js",
    "auto-heal:watch": "nodemon scripts/auto-heal.js",
    "pre-push": "npm run auto-heal",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "commit": "git-cz",
    "commit:check": "commitlint --edit",
    "lighthouse": "lhci autorun",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "env:check": "dotenv-linter",
    "env:validate": "dotenv-linter --env-file .env.example",
    "quality:check": "npm run lint && npm run format:check && npm run type-check && npm run test:fast",
    "quality:fix": "npm run lint:fix && npm run format && npm run test:fast"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.22.0",
    "@hookform/resolvers": "^5.1.1",
    "@sentry/browser": "^9.30.0",
    "@sentry/nextjs": "^9.30.0",
    "@sentry/react": "^9.30.0",
    "@tanstack/react-query": "^5.80.10",
    "axios": "^1.10.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.518.0",
    "next": "^14.2.25",
    "posthog-js": "^1.255.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.58.1",
    "stripe": "^18.2.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/prompt-cli": "^19.8.1",
    "@lhci/cli": "^0.15.0",
    "@octokit/rest": "^20.1.2",
    "@playwright/test": "^1.53.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-toast": "^1.2.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.0.12",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^9.0.12",
    "@storybook/react": "^9.0.12",
    "@storybook/testing-library": "^0.2.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.3",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "autocannon": "^7.15.0",
    "autoprefixer": "^10.4.0",
    "chokidar": "^4.0.3",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "dotenv-expand": "^12.0.2",
    "dotenv-linter": "^0.2.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.25",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "lighthouse": "^11.7.1",
    "mongoose": "^8.16.0",
    "msw": "^2.10.2",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "snyk": "^1.1297.2",
    "supertest": "^7.1.1",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vercel": "^43.3.0",
    "zod": "^3.25.67"
  }
}
