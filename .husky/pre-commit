#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Checking code style..."
npm run lint:fix

# Run formatting
echo "🎨 Formatting code..."
npm run format

# Run type checking
echo "🔧 Type checking..."
npm run type-check

# Run fast tests
echo "🧪 Running fast tests..."
npm run test:fast

echo "✅ Pre-commit checks passed!" 