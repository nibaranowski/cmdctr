# =============================================================================
# cmdctr Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# =============================================================================
# DATABASE
# =============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/cmdctr

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
# Clerk publishable key (public)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
# Clerk secret key (private)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
# Clerk webhook secret
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# PAYMENTS (Stripe)
# =============================================================================
# Stripe publishable key (public)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# Stripe secret key (private)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# ANALYTICS
# =============================================================================
# PostHog analytics
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Plausible analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=localhost

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Better Stack logging
BETTERSTACK_SOURCE_TOKEN=your_betterstack_token_here

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Resend API key for sending emails
RESEND_API_KEY=re_your_resend_api_key

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# App name (used in various places)
NEXT_PUBLIC_APP_NAME=cmdctr
# App URL (used for callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true
NEXT_PUBLIC_ENABLE_EMAIL=true

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret (if using custom JWT)
JWT_SECRET=your_jwt_secret_here
# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# INTEGRATIONS
# =============================================================================
# GitHub OAuth (if using GitHub integration)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Slack integration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Enable debug logging
DEBUG=*
# Enable verbose logging
VERBOSE=true
# Mock external services in development
MOCK_EXTERNAL_SERVICES=false

# NextAuth
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000 